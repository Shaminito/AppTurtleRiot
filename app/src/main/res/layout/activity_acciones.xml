<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccionesActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".PortadaManuActivity"
            tools:showIn="@layout/app_bar_portada_manu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="@drawable/fondo2"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/team" />

                <FrameLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/beach" />

                <FrameLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/speechbubble" />

                <FrameLayout
                    android:layout_width="23dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="87dp"
                    android:layout_height="67dp"
                    android:background="@drawable/bus" />

                <FrameLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="86dp">

                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>