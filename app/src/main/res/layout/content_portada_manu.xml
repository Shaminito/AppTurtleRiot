<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.turtleriot.PortadaManuActivity"
    tools:showIn="@layout/app_bar_portada_manu">

    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llAcciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margenes_menu">

            <ImageView
                android:id="@+id/ivAcciones"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/accion" />

            <TextView
                android:id="@+id/tvAcciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/life_s_a_beach"
                android:text="@string/txt_tvAcciones"
                android:textAlignment="center"
                android:textColor="@color/textColor_Whiite" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAdvertencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margenes_menu">

            <ImageView
                android:id="@+id/ivAdvertencia"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/advertencia" />

            <TextView
                android:id="@+id/tvAdvertencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/life_s_a_beach"
                android:text="@string/txt_tvAdvertencia"
                android:textAlignment="center"
                android:textColor="@color/textColor_Whiite" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPlayas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margenes_menu">

            <ImageView
                android:id="@+id/ivPlayas"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/playa" />

            <TextView
                android:id="@+id/tvPlayas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/life_s_a_beach"
                android:text="@string/txt_tvPlayas"
                android:textAlignment="center"
                android:textColor="@color/textColor_Whiite" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llIr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margenes_menu">

            <ImageView
                android:id="@+id/ivIr"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ir" />

            <TextView
                android:id="@+id/tvIr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/life_s_a_beach"
                android:text="@string/txt_tvIr"
                android:textAlignment="center"
                android:textColor="@color/textColor_Whiite" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlFragmentContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llMenu"
        android:background="@android:color/background_light">

        <LinearLayout
            android:id="@+id/llFragmentContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMenuBienvenido"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@mipmap/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tvMenuBienvenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/life_s_a_beach_thin"
                android:text="@string/texBienbenido"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvMenuNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/life_s_a_beach_thin"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>