<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PortadaManuActivity"
    tools:showIn="@layout/app_bar_portada_manu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/fondo2"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="match_parent">

        </FrameLayout>

        <Button
            android:id="@+id/btnAccion"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/team" />

        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="match_parent">

        </FrameLayout>

        <Button
            android:id="@+id/btnPlayas"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/beach" />

        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="match_parent">

        </FrameLayout>

        <Button
            android:id="@+id/btnAcciones"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/speechbubble" />

        <FrameLayout
            android:layout_width="23dp"
            android:layout_height="match_parent">

        </FrameLayout>

        <Button
            android:id="@+id/btnIr"
            android:layout_width="87dp"
            android:layout_height="67dp"
            android:background="@drawable/bus" />

        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="284dp"
            android:layout_height="248dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/tortugamarcaagua" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="86dp">

        </FrameLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/life_s_a_beach_thin"
            android:text="@string/texBienbenido"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>