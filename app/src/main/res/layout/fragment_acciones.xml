<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flAcciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.turtleriot.AccionesFragment" >


    <ScrollView
        android:id="@+id/scAcciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAcciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llBuscarAcciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBuscarAcciones"
                    android:layout_width="5dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_buscar_acc" />

                <TextView
                    android:id="@+id/tvBuscarAcciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_et_left"
                    android:layout_weight="1"
                    android:fontFamily="@font/life_s_a_beach"
                    android:text="@string/txt_tvBuscarAcciones"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAccionesSeguidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAccionesSeguidos"
                    android:layout_width="25dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_acciones" />

                <TextView
                    android:id="@+id/tvAccionesSeguidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_et_left"
                    android:layout_weight="1"
                    android:fontFamily="@font/life_s_a_beach"
                    android:text="@string/txt_tvAccionesSeguidos"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCrearAcciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCrearAcciones"
                    android:layout_width="5dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_crear_acciones" />

                <TextView
                    android:id="@+id/tvCrearAcciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_et_left"
                    android:layout_weight="1"
                    android:fontFamily="@font/life_s_a_beach"
                    android:text="@string/txt_tvCrearAcciones"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAdministrarAcciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAdministrarAcciones"
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_adminis_acciones" />

                <TextView
                    android:id="@+id/tvAdministrarAcciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_et_left"
                    android:layout_weight="1"
                    android:fontFamily="@font/life_s_a_beach"
                    android:text="@string/txt_tvAdministrarAcciones"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>