<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRegUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUserActivity">

    <LinearLayout
        android:id="@+id/llRegUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iwLogoRegUser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="@dimen/margin_button"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/etRegUserNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_button"
            android:ems="10"
            android:hint="nombre y apellidos"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etRegUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_button"
            android:ems="10"
            android:hint="correo electronico"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etRegUserPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_boton"
            android:ems="10"
            android:hint="Passwd"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnRegistro"
            android:text="REGISTRO" />
    </LinearLayout>
</RelativeLayout>